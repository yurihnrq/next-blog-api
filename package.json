{
  "name": "next-blog-api",
  "version": "0.3.0-alpha",
  "description": "RESTful API to manage users and content for blogs.",
  "main": ".build/index.js",
  "scripts": {
    "build": "swc src/ -d dist/ --config-file .swcrc",
    "start": "pm2 start dist/index.js --name next-blog-api",
    "monit": "pm2 monit",
    "stop": "pm2 stop next-blog-api",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src/**/*.ts",
    "prettier": "prettier --write src/**/*.ts",
    "generate": "prisma generate",
    "migrate:dev": "prisma migrate dev",
    "test": "jest --no-cache",
    "test:watch": "jest --watchAll --no-cache",
    "test:coverage": "jest --coverage --no-cache",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yurihnrq/next-blog-api.git"
  },
  "keywords": [
    "typescript",
    "blog",
    "api",
    "express",
    "nodejs",
    "prisma"
  ],
  "author": "Yuri Henrique B. Maciel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yurihnrq/next-blog-api/issues"
  },
  "project": {
    "url": "https://github.com/users/yurihnrq/projects/2/views/2"
  },
  "homepage": "https://github.com/yurihnrq/next-blog-api#readme",
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "bcrypt": "^5.1.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.0",
    "pm2": "^5.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "uuid": "^9.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.40",
    "@swc/jest": "^0.2.24",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.2",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "prisma": "^4.11.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "tsx": "^3.12.5",
    "typescript": "^4.9.5"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write src/**/*.ts",
      "eslint --cache --fix",
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  }
}
