{
  "name": "next-blog-api",
  "version": "0.0.1",
  "description": "RESTful API to manage users and content for blogs.",
  "main": ".build/index.js",
  "scripts": {
    "build": "swc src/ -d dist/ --config-file .swcrc",
    "start": "pm2 start dist/index.js --name next-blog-api",
    "monit": "pm2 monit",
    "stop": "pm2 stop next-blog-api",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src/**/*.ts",
    "prettier": "prettier --write src/**/*.ts",
    "generate": "prisma generate",
    "migrate:dev": "prisma migrate dev",
    "test": "jest --no-cache",
    "test:watch": "jest --watchAll --no-cache",
    "test:coverage": "jest --coverage --no-cache",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yurihnrq/next-blog-api.git"
  },
  "keywords": [
    "typescript",
    "blog",
    "api",
    "express",
    "nodejs",
    "prisma"
  ],
  "author": "Yuri Henrique B. Maciel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yurihnrq/next-blog-api/issues"
  },
  "project": {
    "url": "https://github.com/users/yurihnrq/projects/2/views/2"
  },
  "homepage": "https://github.com/yurihnrq/next-blog-api#readme",
  "dependencies": {
    "@prisma/client": "^3.14.0",
    "bcrypt": "^5.0.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.0",
    "pm2": "^5.2.0",
    "uuid": "^9.0.0",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.197",
    "@swc/jest": "^0.2.21",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.35",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "prisma": "^3.14.0",
    "supertest": "^6.2.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0",
    "tsx": "^3.10.4",
    "typescript": "^4.6.4"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write src/**/*.ts",
      "eslint --cache --fix",
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  }
}
